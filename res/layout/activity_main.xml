<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/eyeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eye_out" />

        <ImageView
            android:id="@+id/eyeRightInside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="130dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eye_in" />

        <ImageView
            android:id="@+id/eyeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginRight="120dp"
            android:layout_marginTop="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eye_out" />

        <ImageView
            android:id="@+id/eyeLeftInside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginRight="80dp"
            android:layout_marginTop="130dp"
            android:scaleType="fitCenter"
            android:src="@drawable/eye_in" />

        <ImageView
            android:id="@+id/mouthFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="280dp"
            android:scaleType="centerInside"
            android:src="@drawable/mouth" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:prompt="@string/language_prompt" />
    </FrameLayout>

</LinearLayout>